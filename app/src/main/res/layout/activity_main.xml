<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBkg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.cardview.widget.CardView
            android:id="@+id/setupCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/secondBkg"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/wallet"
                    android:focusable="false"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text"
                    android:drawableStart="@drawable/wallet"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bet Amount"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"/>


                <EditText
                    android:id="@+id/betAmount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text"
                    android:drawableStart="@drawable/money"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawablePadding="10dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mines"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"/>

                <Spinner
                    android:id="@+id/mines"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text"
                    android:layout_margin="5dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:popupBackground="@color/blue"
                    android:focusable="true"
                    />


                <Button
                    android:id="@+id/start_button"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="Bet"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainBkg"
                    android:background="@drawable/button_ripple"
                    app:backgroundTint="@null"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/runningCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/secondBkg"
            app:cardElevation="10dp"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game ON: Find Diamonds"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Winning"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_margin="10dp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/current_win"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text"
                    android:drawableStart="@drawable/money"
                    android:paddingStart="10dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:drawablePadding="10dp"
                    />

                <Button
                    android:id="@+id/stop_withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="Withdraw"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="15sp"
                    android:textColor="@color/mainBkg"
                    android:background="@drawable/button_ripple"
                    app:backgroundTint="@null"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:padding="5dp"
            app:cardBackgroundColor="@color/secondBkg"
            app:cardElevation="10dp"
            >


            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/mineField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:alignmentMode="alignMargins"
                app:columnCount="4"
                app:rowCount="4"
                android:layout_margin="5dp"
                app:useDefaultMargins="true"
                tools:context=".MainActivity">

                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_row="0"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"

                    app:layout_row="0"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                     />

                <Button
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="1"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b10"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b11"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                     />

                <Button
                    android:id="@+id/b12"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="2"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b13"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_column="0"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b14"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_column="1"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b15"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_column="2"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

                <Button
                    android:id="@+id/b16"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_gravity="fill"
                    app:layout_row="3"
                    app:layout_column="3"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:background="@drawable/butt_back"
                    app:backgroundTint="@null"
                    />

            </androidx.gridlayout.widget.GridLayout>


        </androidx.cardview.widget.CardView>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>